function sh_footer(file, str)
{
	assert(file != "");
	assert(str  != "");

	printf("\n")          > file;
	printf("# %s\n", str) > file;
}

#
# C related functions
#
function c_header(file)
{
	assert(file != "");

	printf("/*\n")   > file;
	printf(" * This file has been generated by %s. DO NOT EDIT\n",
	       PROGNAME) > file;
	printf(" */\n")  > file;
	printf("\n")     > file;
}

function c_footer(file, str)
{
	assert(file != "");
	assert(str  != "");

	printf("\n")              > file;
	printf("/* %s */\n", str) > file;
}

function c_guard_header(file, guard)
{
	assert(file  != "");
	assert(guard != "");

	printf("#ifndef %s\n", toupper(guard)) > file;
	printf("#define %s\n", toupper(guard)) > file;
	printf("\n")                           > file;
}

function c_guard_footer(file, guard)
{
	assert(file  != "");
	assert(guard != "");

	printf("\n")                                > file;
	printf("#endif /* %s */\n", toupper(guard)) > file;
}

function c_comment(file, str)
{
	assert(file);
	assert(str);

	printf("/* %s */\n", str) > file;
}

#
# C++ related functions
#
function cxx_header(file)
{
	assert(file);

	printf("//\n")   > file;
	printf("// This file has been generated by %s. DO NOT EDIT\n",
	       PROGNAME) > file;
	printf("//\n")   > file;
	printf("\n")     > file;
}

function cxx_comment(file, str)
{
	assert(file);
	assert(str);

	printf("// %s\n", str) > file;
}

function cxx_footer(file, str)
{
	assert(file);
	assert(str);

	printf("\n")           > file;
	printf("// %s\n", str) > file;
}
