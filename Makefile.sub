  -e 's,[@]pkgvlibsdir[@],$(pkgvlibsdir),g' \
  -e 's,[@]pkgvdatadir[@],$(pkgvdatadir),g'

do_subst_MAINTAINER = \
  -e 's,[@]WGET[@],$(WGET),g' \
  -e 's,[@]DNT[@],$(DNT),g'

